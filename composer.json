{
    "name":"bright-cloud-studio/isotope-sku-search",
    "description":"When using Contao's Frontend Search module, searching by SKU will redirect the user to that Product's Reader page.",
    "keywords": ["contao", "isotope", "sku", "search", "bright", "cloud", "studio"],
    "type": "contao-bundle",
    "homepage": "http://brightcloudstudio.com/",
    "license": "LGPL-3.0+",
    "authors":[
        {
            "name": "Bright Cloud Studio",
            "homepage": "https://brightcloudstudio.com",
            "email": "mark@brightcloudstudio.com",
            "role": "Developer"
        }
    ],
    "support":{
        "issues": "https://github.com/bright-cloud-studio/isotope-sku-search/issues",
        "source": "https://github.com/bright-cloud-studio/isotope-sku-search"
    },
    "require":{
        "php": "^7.4 || ^8.0",
        "contao/core-bundle": "^4.13 || ^5.3"
    },
    "extra":{
        "contao-manager-plugin": "Bcs\\IsotopeSkuSearchBundle\\ContaoManager\\Plugin"
    },
    "autoload": {
        "psr-4": {
            "Bcs\\IsotopeSkuSearchBundle\\": "src"
        },
        "classmap": [
            "src/Resources/contao"
        ],
        "exclude-from-classmap": [
            "src/Resources/contao/config/",
            "src/Resources/contao/dca/",
            "src/Resources/contao/languages/",
            "src/Resources/contao/templates/"
        ]
    }
}
